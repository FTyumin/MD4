@model MD4.Models.Course

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher)
        </dt>
        <dd class = "col-sm-10">
            @* seit GPT piepalidzeja, ar to Model. *@
            @{
            var teacherName = Model.Teacher.Name + " " + Model.Teacher.Surname;
            }
            
            @Html.DisplayFor(model => teacherName)
        </dd>
        <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Assignments)
        </dt>
        <dd>
            <ul>
                @foreach (var assignment in Model.Assignments)
                {
                    <li>
                        @Html.DisplayFor(modelItem => assignment.Description) |
                        <a href="/Assignments/Edit/@assignment.Id">Edit</a>
                        <a href="/Assignments/Delete/@assignment.Id">Delete</a>
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
