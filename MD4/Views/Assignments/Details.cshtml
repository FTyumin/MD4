@model MD4.Models.Assignment

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Assignment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Deadline)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseId)
        </dt>
        <dd class="col-sm-10">
            
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt>
                        @Html.DisplayNameFor(model => model.Submissions)
        </dt>
        <dd>
            <ul>
                @foreach (var submission in Model.Submissions)
                {
                    <li>
                       Student: @Html.DisplayFor(modelItem => submission.Student.FullName) |
                       Score: @Html.DisplayFor(ModelItem => submission.Score)  |
                        <a href="/Submissions/Edit/@submission.Id">Edit</a> |
                        <a href="/Submissions/Details/@submission.Id">Details</a> |
                        <a href="/Submissions/Delete/@submission.Id">Delete</a>
                    </li>
                }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
